{{>layouts/header}}

<!-- content -->
<div class="bg-light text-black p-5" id="loginform">
    <form class="container" action="/loginResult" method="post">
        <div class="mb-3">
            <h2>마루설아 로그인 페이지</h2>
            <label for="id" class="form-label"></label>
            <input type="text" class="form-control" id="id" placeholder="아이디">

            <label for="password" class="form-label"></label>
            <input type="text" class="form-control" id="password" placeholder="패스워드">
            <br/>
        </div>

        <div style="text-align: center;">
            <button id="login" type="submit" class="btn btn-primary">로그인</button>
            <button id="register" type="button" class="btn btn-success" onclick="location.href='/register'">회원가입</button>
        </div>
    </form>
</div>


{{>layouts/footer}}